pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh './script/test'
            }
        }
        stage('Deliver') {
            steps {
                sh './script/deploy'
            }
       }
        stage ('copy app') {
            steps {
                sh 'scp node-app jenkins@10.0.2.4:/opt'
                  }
        }
        stage ('Build image') {
            steps {
                sh 'sudo docker build -t root/2dorh111111 .' 
                }
                }
   }
   
}
